<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="post">
  <label>Figure Name:</label>

  <br></br>

  <input type="text" name="figure[name]" id="figure_name" value=<%=@figure.name%>>

  <br></br>

  <label>Edit an existing title:</label>

  <br></br>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%>
  <% end %>

  <br></br>

  <label>And/or create a new title:</label>

  <br></br>

  <input type="text" name="title[name]" id="new_title">

  <br></br>

  <label>Edit an existing landmark:</label>

  <br></br>

  <%Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%>
  <% end %>

  <br></br>

  <label>And/or create a new landmark:</label>

  <br></br>

  <label>Name:<input type="text" name="landmark[name]" id="new_landmark"></label>
  <label>Year Completed:<input type="text" name="landmark[year_completed]"></label>

  <br></br>

  <input type="submit" value="Edit Figure">

</form>
